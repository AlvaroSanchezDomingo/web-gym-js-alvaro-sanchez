      <label>New Name</label>
      <input placeholder="First Name" type="text"  name="name">
    </div>
    <div class="field">
      <label>Change Name</label>
      <button class="ui blue submit button">Change</button>
    </div>
    <div class="field">
      <label>Current Name</label>
      <p>
        {{member.name}}
      </p>
    </div>
  </div>
</form>
